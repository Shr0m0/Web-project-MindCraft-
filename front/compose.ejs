
<%- include("partials/header"); -%>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1>Create a Post</h1>
      <form action="/compose" method="post">
        <div class="form-group">
          <label for="postSubject">Subject</label>
          <input class="form-control" type="text" id="postSubject" name="postSubject">
        </div>
        <div class="form-group">
          <label for="postTitle">Title</label>
          <input class="form-control" type="text" id="postTitle" name="postTitle">
        </div>
        <div class="form-group">
          <label for="postBody">Post</label>
          <textarea class="form-control" id="postBody" name="postBody" rows="8" cols="80"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer"); -%>
